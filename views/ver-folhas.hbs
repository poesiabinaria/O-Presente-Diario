						<div id="lista-folhas">
							{{#mostrarFolhas listaFolhas}}
								<div class="barra-vertical">
									<a href="exibir-folhas/{{numeroFolha}}">
										<div id="resumo-folha">
											<p class="titulo-folha"> {{tituloFolha}} </p>
											<div class="informacoes-folha">
												<span class="numero-folha faixa-texto"> Folha {{numeroFolha}} </span>
												<span class="momento-escrita faixa-texto"> {{dataEscrita}} </span>
											</div>
										</div>
									</a>
								</div>
							{{/mostrarFolhas}}
						</div>
					</div>
					<button id="botao-mais" class="botao-pequeno">Mais Antigas</button>
					<div id="barra-rotacionada_ver-folha"></div>
				</div>
			</section>
		</main>
		
	
	

		{{> footer}}
	
		
		
		

		<script type="text/javascript" src="javascripts/funcoes-momento-presente.js"></script>
